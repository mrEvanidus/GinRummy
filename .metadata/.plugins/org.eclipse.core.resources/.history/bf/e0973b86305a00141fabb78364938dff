package Animation;

import gameObjects.Card;
import android.graphics.*;

public class CardPath {
	
	private static float animationSpeed = 100; //the speed of animations, default 100 ticks
	
	//instance variables
	private Card card;
	private PointF origin;
	private PointF desination;
	private int progress; //the number of ticks that have elapsed
	
	public CardPath(Card card, PointF origin) {
		this.card = card;
		this.origin = origin;
	}

	public Card getCard() {
		return card;
	}

	public void setCard(Card card) {
		this.card = card;
	}

	public PointF getOrigin() {
		return origin;
	}
	
	public void setAnimationSpeed(float speed) {
		this.animationSpeed = speed;
	}
	
	public float getAnimationSpeed() {
		return animationSpeed;
	}

	public PointF getDesination() {
		return desination;
	}

	public void setDesination(PointF desination) {
		this.desination = desination;
	}

	public void advance() {
		// TODO Auto-generated method stub
		
	}
}
